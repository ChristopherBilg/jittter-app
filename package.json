{
  "name": "jittter-app",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "all": "npm run typecheck && npm run lint && npm run format:check",
    "build": "remix build",
    "dev": "remix dev --manual -c \"npm run start\"",
    "format:check": "prettier --check app/",
    "format:write": "prettier --write app/",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint app/",
    "start": "wrangler pages dev --compatibility-date=2024-01-30 ./public",
    "drizzle:generate": "drizzle-kit generate:pg",
    "drizzle:push": "source .env && drizzle-kit push:pg",
    "drizzle:push-local": "source .dev.vars && drizzle-kit push:pg",
    "drizzle:studio": "drizzle-kit studio",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@neondatabase/serverless": "^0.9.0",
    "@remix-run/cloudflare": "^2.7.2",
    "@remix-run/cloudflare-pages": "^2.8.0",
    "@remix-run/css-bundle": "^2.8.0",
    "@remix-run/react": "^2.8.0",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.29.4",
    "isbot": "^5.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240222.0",
    "@remix-run/dev": "^2.8.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/react": "^18.2.63",
    "@types/react-dom": "^18.2.20",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "drizzle-kit": "^0.20.13",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "pg": "^8.11.3",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.1.0",
    "wrangler": "^3.31.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
